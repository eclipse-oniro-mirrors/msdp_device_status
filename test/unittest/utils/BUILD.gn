import("//build/test.gni")
import("../../../device_status.gni")

module_output_path = "${device_status_part_name}/device_status/unit_out"

ohos_unittest("UtilityTest") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
    blocklist = "./../ipc_blocklist.txt"
  }

  branch_protector_ret = "pac_ret"

  module_out_path = module_output_path
  include_dirs = [
    "${device_status_interfaces_path}/innerkits/interaction/include",
    "${device_status_utils_path}/include",
  ]

  defines = []

  sources = [ "src/utility_test.cpp" ]

  configs = []

  deps = [ "${device_status_utils_path}:devicestatus_util" ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}

ohos_unittest("CustomConfigTest") {
  sanitize = {
    integer_overflow = true
    ubsan = true
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
    debug = false
    blocklist = "./../ipc_blocklist.txt"
  }
 
  branch_protector_ret = "pac_ret"
 
  module_out_path = module_output_path
  include_dirs = [
    "${device_status_interfaces_path}/innerkits/interaction/include",
    "${device_status_root_path}/utils/custom_config/include",
    "${device_status_utils_path}/include",
  ]
 
  defines = []
 
  sources = [ "src/custom_config_test.cpp" ]
 
  cflags = [ "-Dprivate=public" ]
 
  configs = []
 
  deps = [
    "${device_status_root_path}/utils/custom_config:custom_config_parser",
    "${device_status_utils_path}:devicestatus_util",
    "${device_status_root_path}/utils/json_parser:json_parser",
  ]
  external_deps = [
    "c_utils:utils",
    "cJSON:cjson",
    "hilog:libhilog",
  ]
}
 
group("unittest") {
  testonly = true
  deps = [
    ":UtilityTest",
    ":CustomConfigTest",
  ]
}
