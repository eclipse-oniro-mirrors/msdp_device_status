import("../../../../device_status.gni")

config("device_room_location_private_config") {
  include_dirs = [ "include" ]
}

ohos_shared_library("roomlocation_napi") {
  branch_protector_ret = "pac_ret"
  sanitize = {
    integer_overflow = true
    ubsan = true
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  sources = [
    "${device_status_frameworks_path}/js/napi/room_location/src/room_location_event_napi.cpp",
    "${device_status_frameworks_path}/js/napi/room_location/src/room_location_napi.cpp",
    "${device_status_frameworks_path}/js/napi/room_location/src/room_location_napi_error.cpp",
  ]

  configs = [ ":device_room_location_private_config" ]

  deps = [ "${device_status_utils_path}:devicestatus_util" ]

  external_deps = [
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "hilog:libhilog",
    "ipc:ipc_single",
    "napi:ace_napi",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]

  relative_install_dir = "module/multimodalawareness"
  subsystem_name = "msdp"
  part_name = "${device_status_part_name}"
}
