@!namespace("@ohos.multimodalAwareness.motion", "motion")
@!sts_inject("""
static
{ loadLibrary("Motion.z") }
""")

enum OperatingHandStatus : i32 {
    UNKNOWN_STATUS = 0,
    LEFT_HAND_OPERATED = 1,
    RIGHT_HAND_OPERATED = 2
}

function getRecentOperatingHandStatus(): OperatingHandStatus;

@!sts_inject("""
    function on(type: 'operatingHandChanged', callback: (info: OperatingHandStatus) => void) {
        return onOperatingHandChanged(callback, callback);
      }
    function off(type: 'operatingHandChanged', callback?: (info: OperatingHandStatus) => void) {
        return offOperatingHandChanged(callback);
      }
""")
function onOperatingHandChanged(f: (info: OperatingHandStatus) => void, opq: Opaque);
function offOperatingHandChanged(opq: Optional<Opaque>);

