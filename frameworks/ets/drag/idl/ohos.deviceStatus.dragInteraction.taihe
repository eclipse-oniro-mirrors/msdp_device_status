@!namespace("@ohos.deviceStatus.dragInteraction", "dragInteraction")
@!sts_inject("""
static { loadLibraryWithPermissionCheck("DragInteraction.z", "@ohos.deviceStatus.dragInteraction") }
""")

enum DragState : i32 {
    MSG_DRAG_STATE_UNKNOWN = -1,
    MSG_DRAG_STATE_ERROR = 0,
    MSG_DRAG_STATE_START = 1,
    MSG_DRAG_STATE_STOP = 2,
    MSG_DRAG_STATE_CANCEL = 3,
    MSG_DRAG_STATE_MOTION_DRAGGING = 4
}

struct Summary {
    dataType: String;
    dataSize: i64;
}

@!sts_inject("""
    function on(type: 'drag', callback: (info: DragState) => void) {
        return registerListener(callback, callback);
      }
    function off(type: 'drag', callback?: (info: DragState) => void) {
        return unRegisterListener(callback);
      }
""")
function registerListener(callback: (info: DragState) => void, opq: Opaque);
function unRegisterListener(opq: Optional<Opaque>);
function getDataSummary(): Array<Summary>;