import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")
import("//build/ohos/taihe_idl/taihe.gni")
import("//base/msdp/device_status/device_status.gni")
copy_taihe_idl("drag_taihe") {
  sources = [ "idl/ohos.deviceStatus.dragInteraction.taihe" ]
}
subsystem_name = "msdp"
part_name = "device_status"
taihe_generated_file_path = "$taihe_file_path/out/$subsystem_name/$part_name"
ohos_taihe("run_taihe") {
  taihe_generated_file_path = "$taihe_generated_file_path"
  deps = [ ":drag_taihe" ]
  outputs = [
    "$taihe_generated_file_path/src/ohos.deviceStatus.dragInteraction.ani.cpp",
    "$taihe_generated_file_path/src/ohos.deviceStatus.dragInteraction.abi.c",
  ]
}
taihe_shared_library("DragInteraction") {
  taihe_generated_file_path = "$taihe_generated_file_path"
  part_name = "$part_name"
  subsystem_name = "$subsystem_name"
  sources = get_target_outputs(":run_taihe")
  branch_protector_ret = "pac_ret"
  sanitize = {
    integer_overflow = true
    ubsan = true
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
    debug = false
  }
  include_dirs = [
    "include",
    "${device_status_utils_path}/include",
    "${device_status_interfaces_path}/innerkits/interaction/include",
    "${device_status_frameworks_path}/native/interaction/include",
  ]
  external_deps = [
    "c_utils:utils",
    "graphic_2d:librender_service_client",
    "graphic_2d:librender_service_base",
    "hilog:libhilog",
    "image_framework:image_native",
  ]
  sources += [
    "src/ani_constructor.cpp",
    "src/ohos.deviceStatus.dragInteraction.impl.cpp",
  ]
  deps = [
    ":run_taihe",
    "${device_status_interfaces_path}/innerkits:devicestatus_client",
    "${device_status_utils_path}:devicestatus_util",
  ]
}
generate_static_abc("drag_abc") {
  base_url = "$taihe_generated_file_path"
  files = [ "$taihe_generated_file_path/@ohos.deviceStatus.dragInteraction.ets" ]
  is_boot_abc = "True"
  device_dst_file = "/system/framework/drag_abc.abc"
  dependencies = [ ":run_taihe" ]
}
ohos_prebuilt_etc("drag_etc") {
  source = "$target_out_dir/drag_abc.abc"           
  module_install_dir = "framework"
  part_name = "$part_name"
  subsystem_name = "$subsystem_name"
  deps = [ ":drag_abc" ]
}
group("dragInteraction") {
  deps = [
    ":drag_etc",
    ":DragInteraction",
  ]
}